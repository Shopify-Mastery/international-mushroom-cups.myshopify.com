{% render "blocks.custom_fields" with resource_type: "products", blocks: section.blocks %}
{% schema %}
  {
    "name": {
        "en": "Custom Fields"
    },
    "settings": [
        {
            "type": "paragraph",
            "content": "[View Documentation](https:\/\/custom-fields.docs.bonify.io\/)"
        },
        {
            "type": "paragraph",
            "content": "[Edit Custom Fields](https:\/\/customfields.bonify.io\/dashboard\/mushroomcups-rs.myshopify.com\/products\/configure)"
        }
    ],
    "templates": [
        "product"
    ],
    "presets": [
        {
            "name": "Custom Fields",
            "blocks": []
        }
    ],
    "blocks": [
        {
            "type": "cf_w_acc2",
            "name": {
                "en": "Accordion "
            },
            "settings": [
                {
                    "type": "select",
                    "id": "key",
                    "label": "Select a Widget",
                    "options": [
                        {
                            "value": "custom_fields.ingredients",
                            "label": "Ingredients"
                        }
                    ]
                },
                {
                    "type": "header",
                    "content": "Section Title"
                },
                {
                    "id": "section_title_text",
                    "type": "text",
                    "label": "Section Title"
                },
                {
                    "id": "section_title_tag",
                    "type": "select",
                    "label": "Tag",
                    "default": "h2",
                    "options": [
                        {
                            "value": "h1",
                            "label": "<h1>"
                        },
                        {
                            "value": "h2",
                            "label": "<h2>"
                        },
                        {
                            "value": "h3",
                            "label": "<h3>"
                        },
                        {
                            "value": "h4",
                            "label": "<h4>"
                        },
                        {
                            "value": "h5",
                            "label": "<h5>"
                        },
                        {
                            "value": "h6",
                            "label": "<h6>"
                        },
                        {
                            "value": "div",
                            "label": "<div>"
                        },
                        {
                            "value": "span",
                            "label": "<span>"
                        }
                    ]
                },
                {
                    "id": "section_title_margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 1
                },
                {
                    "id": "section_title_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "type": "header",
                    "content": "Layout"
                },
                {
                    "id": "cols",
                    "type": "select",
                    "label": "Width",
                    "default": "12",
                    "options": [
                        {
                            "value": "4",
                            "label": "1\/3"
                        },
                        {
                            "value": "6",
                            "label": "1\/2"
                        },
                        {
                            "value": "8",
                            "label": "2\/3"
                        },
                        {
                            "value": "12",
                            "label": "Full width"
                        }
                    ]
                },
                {
                    "id": "margin_top",
                    "label": "Top Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "id": "margin_bottom",
                    "label": "Bottom Margin",
                    "type": "range",
                    "min": 0,
                    "max": 20,
                    "step": 1,
                    "unit": "rem",
                    "default": 5
                },
                {
                    "type": "header",
                    "content": "Widget Settings"
                },
                {
                    "id": "widget_open_first",
                    "label": "Open first item by default",
                    "type": "checkbox",
                    "default": false
                },
                {
                    "id": "widget_allow_all_closed",
                    "label": "Allow all items to be closed",
                    "type": "checkbox",
                    "info": "By default at least one item must be open.",
                    "default": true
                },
                {
                    "id": "widget_allow_multiple_open",
                    "label": "Allow multiple items to be open",
                    "type": "checkbox",
                    "info": "By default only one item can be open at a time.",
                    "default": false
                },
                {
                    "id": "widget_animate_speed",
                    "label": "Open & Close Animation Speed (ms)",
                    "type": "range",
                    "min": 0,
                    "max": 2000,
                    "step": 50,
                    "unit": "ms",
                    "default": 200
                },
                {
                    "type": "header",
                    "content": "Item Settings"
                },
                {
                    "id": "bg_color",
                    "type": "color",
                    "label": "Background Color",
                    "default": "#f4f4f4"
                },
                {
                    "id": "item_border",
                    "type": "text",
                    "label": "Border",
                    "default": "1px solid transparent",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-outline\/)"
                },
                {
                    "id": "item_border_radius",
                    "type": "text",
                    "label": "Border Radius",
                    "default": "0px",
                    "info": "[Generate](https:\/\/html-css-js.com\/css\/generator\/border-radius\/)"
                },
                {
                    "id": "item_margin_bottom",
                    "label": "Margin Bottom",
                    "type": "range",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 10
                },
                {
                    "id": "title_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 18
                },
                {
                    "id": "title_font_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "id": "title_font_custom",
                    "label": "Customize the title font",
                    "type": "checkbox",
                    "default": false
                },
                {
                    "id": "title_font",
                    "type": "font_picker",
                    "label": "Custom Title Font",
                    "default": "helvetica_n4"
                },
                {
                    "id": "title_padding",
                    "type": "text",
                    "label": "Padding"
                },
                {
                    "type": "header",
                    "content": "Arrow Settings"
                },
                {
                    "id": "arrow_image",
                    "label": "Arrow Image",
                    "type": "image_picker"
                },
                {
                    "id": "arrow_size",
                    "label": "Arrow Size",
                    "type": "range",
                    "min": 5,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 20
                },
                {
                    "id": "arrow_top",
                    "label": "Top Offset",
                    "type": "range",
                    "min": 0,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 15
                },
                {
                    "id": "arrow_right",
                    "label": "Right Offset",
                    "type": "range",
                    "min": 0,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 20
                },
                {
                    "id": "arrow_rotation_closed",
                    "label": "Closed Rotation",
                    "type": "range",
                    "min": -180,
                    "max": 180,
                    "step": 90,
                    "unit": "deg",
                    "default": 90
                },
                {
                    "id": "arrow_rotation_open",
                    "label": "Open Rotation",
                    "type": "range",
                    "min": -180,
                    "max": 180,
                    "step": 90,
                    "unit": "deg",
                    "default": -90
                },
                {
                    "type": "header",
                    "content": "Body Settings"
                },
                {
                    "id": "body_font_size",
                    "type": "range",
                    "min": 8,
                    "max": 60,
                    "step": 1,
                    "unit": "px",
                    "label": "Font size",
                    "default": 16
                },
                {
                    "id": "body_font_color",
                    "type": "color",
                    "label": "Font Color"
                },
                {
                    "id": "body_padding",
                    "type": "text",
                    "label": "Padding"
                }
            ]
        }
    ]
}
{% endschema %}
