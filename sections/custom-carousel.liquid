<section
  id="CustomCarousel{{ section.id }}"
  class="custom-carousel-{{ section.id }}"
  data-section="{{ section.id }}"
>
  {{ 'owl.carousel.min.css' | asset_url | stylesheet_tag }}
  {{ 'owl.theme.default.min.css' | asset_url | stylesheet_tag }}

  {%- style -%}
    .custom-carousel-{{ section.id }} {
      width: 100%;

      {%- if section.settings.display_on_mobile == false -%}
        display: none;
      {%- else -%}
        display: block;
      {%- endif -%}

      {%- if section.settings.background_color != blank -%}
        background-image: {{ section.settings.background_color }};
      {%- endif -%}

      {%- if section.settings.background_image != blank -%}
        background: url('{{ section.settings.background_image | image_url }}') center/cover no-repeat border-box padding-box scroll;
      {%- endif -%}

      flex-flow: column nowrap;
      justify-content: center;
      align-items: center;

      margin-top: {{ section.settings.mobile_margin_top }}px;
      margin-right: {{ section.settings.mobile_margin_right }}px;
      margin-bottom: {{ section.settings.mobile_margin_bottom }}px;
      margin-left: {{ section.settings.mobile_margin_left }}px;

      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-right: {{ section.settings.mobile_padding_right }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      padding-left: {{ section.settings.mobile_padding_left }}px;
    }

    div.owl-carousel-{{ section.id }} .owl-dots.disabled, div.owl-carousel-{{ section.id }} .owl-nav.disabled {
      display: block;
    }

    div.owl-carousel-{{ section.id }} .owl-dots button.owl-dot:not(.active) > span {
      background: #EEC9A5 !important;
    }

    div.owl-carousel-{{ section.id }} .owl-dots button.owl-dot.active > span {
      background: #38220F !important;
    }

    div.owl-carousel-{{ section.id }} div.owl-item > div {
      display: flex;
      flex-flow: column wrap;
      align-items: center;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__image {
      width: 10rem;
    }


    div.owl-carousel-{{ section.id }} div.owl-item:not(.center) > div {
      -webkit-transform: scale(0.8);
      transform: scale(0.8);
    }

    div.owl-carousel-{{ section.id }} div.owl-item:not(.center) div.owl-carousel__image > img {
      opacity: 0.5;
    }

    div.owl-carousel-{{ section.id }} div.owl-item:not(.center) div.owl-carousel__content {
      {% comment %} display: none; {% endcomment %}
      text-align: center;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > h2 {
      width: 100%;
      margin: 0;
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
      color: #38220F;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > h2 > p {
      width: 80%;
      margin-bottom: 0;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > div.owl-carousel__description {
      width: 100%;
      margin: 0;
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
      color: #38220F;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > div.owl-carousel__description > p {
      width: 100%;
      margin-bottom: 0;
    }

    div.owl-carousel-{{ section.id }} div.owl-item:not(.center) div.owl-carousel__content > :not(h2) {
      display: none;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__secondary_image {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__secondary_image > img {
      width: 40%;
    }

    div.owl-carousel-{{ section.id }} .owl-prev, .owl-next {
      width: 100px;
      height: 50px;
      position: absolute;
      top: 30%;
      transform: translateY(-50%);
      display: none !important;
      {% comment %} display: block !important; {% endcomment %}
      border: 0px solid black;
    }

    div.owl-carousel-{{ section.id }} .owl-prev { left: -10px; }
    div.owl-carousel-{{ section.id }} .owl-next { right: -10px; }
    div.owl-carousel-{{ section.id }} .owl-nav [class*=owl-]:hover {
      background: initial;
      color: initial;
      text-decoration: none;
    }

    @media screen and (min-width: 750px) {
      .custom-carousel-{{ section.id }} {
        {%- if section.settings.display_on_desktop == false -%}
          display: none;
        {%- else -%}
          display: flex;
        {%- endif -%}

        margin-top: {{ section.settings.desktop_margin_top }}px;
        margin-right: {{ section.settings.desktop_margin_right }}px;
        margin-bottom: {{ section.settings.desktop_margin_bottom }}px;
        margin-left: {{ section.settings.desktop_margin_left }}px;

        padding-top: {{ section.settings.desktop_padding_top }}px;
        padding-right: {{ section.settings.desktop_padding_right }}px;
        padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
        padding-left: {{ section.settings.desktop_padding_left }}px;
      }

      div.owl-carousel-{{ section.id }} {
        min-width: 80%;
        width: 80%;
        max-width: 80%;
        margin: auto;
      }

      div.owl-carousel-{{ section.id }} .owl-nav.disabled {
        display: none;
      }
    }

    @media screen and (min-width: 1024px) {
      div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > h2 > p {
        width: 40%;
      }

      div.owl-carousel-{{ section.id }} div.owl-item div.owl-carousel__content > div.owl-carousel__description > p {
        width: 50%;
      }
    }

    @media screen and (min-width: 1600px) {
      div.owl-carousel-{{ section.id }} {
        min-width: 1400px;
        width: 1400px;
        max-width: 1400px;
      }
    }
  {%- endstyle -%}

  <div class="owl-carousel-{{ section.id }} owl-carousel owl-theme">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'custom_carousel_item' -%}
          <div {{ block.shopify_attributes }}>
            <div class="owl-carousel__image">
              <img
                src="{{ block.settings.primary_image | image_url }}"
                height=""
                width=""
                style="border-radius: {{ block.settings.primary_image_border_radius }}% !important"
                loading="lazy"
              >
            </div>
            <div class="owl-carousel__content">
              <h2>{{ block.settings.title }}</h2>
              {%- if block.settings.secondary_image != blank -%}
                <div class="owl-carousel__secondary_image">
                  <img
                    src="{{ block.settings.secondary_image | image_url }}"
                    height=""
                    width=""
                    loading="lazy"
                  >
                </div>
              {%- endif -%}
              {%- if block.settings.display_hr == true -%}
                <hr style="margin: 0; margin: 2rem 0rem; background: #71A8DA;">
              {%- endif -%}
              <div class="owl-carousel__description">
                {{ block.settings.description }}
              </div>
            </div>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>

  {{ 'jquery-3.6.0.min.js' | asset_url | script_tag }}
  {{ 'owl.carousel.min.js' | asset_url | script_tag }}

  <script type="text/javascript">
    (function ($) {
      $(document).ready(function () {
        const width = window.innerWidth > 0 ? window.innerWidth : screen.width;

        if (width < 750) {
          $('div.owl-carousel-{{ section.id }}').owlCarousel({
            stagePadding: 20,
            center: true,
            rtl: false,
            nav: false,
            navText: [
              '<i class="fa fa-angle-left" aria-hidden="true"></i>',
              '<i class="fa fa-angle-right" aria-hidden="true"></i>',
            ],
            dots: true,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true,
            responsive: {
              0: {
                items: 1,
              },
              600: {
                items: 1,
              },
              1000: {
                items: 1,
              },
            },
          });

          return;
        }

        $('div.owl-carousel-{{ section.id }}').owlCarousel({
          items: 1,
          center: true,
          rtl: false,
          nav: false,
          navText: [
            '<i class="fa fa-angle-left" aria-hidden="true"></i>',
            '<i class="fa fa-angle-right" aria-hidden="true"></i>',
          ],
          dots: true,
          loop: true,
          margin: 10,
          autoplay: true,
          autoplayTimeout: 5000,
          autoplayHoverPause: true,
        });
      });
    })(jQuery);
  </script>
</section>

