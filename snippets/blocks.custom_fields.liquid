<div class="custom-fields-section v2">
  
    {% if resource_type == "products" %}
    <div class="custom-fields-section__products">
      {% for block in blocks %}
      {% if block.type contains "cf_" %}
      <div {{ block.shopify_attributes }} class="custom-fields-section__item
                  custom-fields-section__item--{{ block.type }}
                  custom-fields-section__item--{{ block.type }}--{{ block.settings.key }}
                  {% if block.settings.cols != blank %}{{ "cf-width-" | append: block.settings.cols | append: "-of-12" }}{% else %}cf-width-12-of-12{% endif %}">
        {% case block.settings.key %}
                  {% when "custom.product_description" %}
            {% render "custom.products.product_description", block:block %}
                  {% when "shopify--discovery--product_search_boost.queries" %}
            {% render "shopify--discovery--product_search_boost.products.queries", block:block %}
                  {% when "shopify--discovery--product_recommendation.related_products" %}
            {% render "shopify--discovery--product_recommendation.products.related_products", block:block %}
                  {% when "shopify--discovery--product_recommendation.related_products_display" %}
            {% render "shopify--discovery--product_recommendation.products.related_products_display", block:block %}
                  {% when "shopify--discovery--product_recommendation.complementary_products" %}
            {% render "shopify--discovery--product_recommendation.products.complementary_products", block:block %}
                  {% when "custom_fields.ingredients" %}
            {% render "custom_fields.products.ingredients", block:block %}
        
        {% endcase %}
      </div>
      {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  
</div>
