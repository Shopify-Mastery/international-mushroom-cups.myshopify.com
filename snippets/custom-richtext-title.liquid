<style>
  @keyframes customSlideIn-{{ block.id }} {
    {%- if block.settings.animation_direction == 'ttb' -%}
      0% {
        top: -100%;
        opacity: 0;
      }
      100% {
        top: 0;
        opacity: 1;
      }
    {%- elsif block.settings.animation_direction == 'rtl' -%}
      0% {
        right: -100%;
        opacity: 0;
      }
      100% {
        right: 0;
        opacity: 1;
      }
    {%- elsif block.settings.animation_direction == 'btt' -%}
      0% {
        bottom: -100%;
        opacity: 0;
      }
      100% {
        bottom: 0;
        opacity: 1;
      }
    {%- else -%}
      0% {
        left: -100%;
        opacity: 0;
      }
      100% {
        left: 0;
        opacity: 1;
      }
    {%- endif -%}
  }

  section.custom-richtext-title__container-{{ block.id }} > p, section.custom-richtext-title__container-{{ block.id }} > ul {
    margin: 0;
  }

  section.custom-richtext-title__container-{{ block.id }} > p {
    text-align: {{ block.settings.mobile_text_alignment }};
  }

  section.custom-richtext-title__container-{{ block.id }} {
    {%- if block.settings.display_on_mobile == false -%}
      display: none;
    {%- else -%}
      display: block;
    {%- endif -%}

    {%- if block.settings.enable_animation_effect == true -%}
      position: relative;
      {%- if block.settings.animation_direction == 'ttb' -%}
        top: -100%;
      {%- elsif block.settings.animation_direction == 'rtl' -%}
        right: -100%;
      {%- elsif block.settings.animation_direction == 'btt' -%}
        bottom: -100%;
      {%- else -%}
        left: -100%;
      {%- endif -%}
      opacity: 0;
      animation-name: customSlideIn-{{ block.id }};
      animation-duration: {{ block.settings.animation_duration }}s;
      animation-timing-function: {{ block.settings.timing_function }};
      animation-delay: {{ block.settings.animation_delay }}s;
      animation-iteration-count: 1;
      animation-direction: normal;
      animation-fill-mode: forwards;
      animation-play-state: running;
    {%- endif -%}

    margin-top: {{- block.settings.mobile_margin_top -}}px;
    margin-right: {{- block.settings.mobile_margin_right -}}px;
    margin-bottom: {{- block.settings.mobile_margin_bottom -}}px;
    margin-left: {{- block.settings.mobile_margin_left -}}px;
    padding-top: {{- block.settings.mobile_padding_top -}}px;
    padding-right: {{- block.settings.mobile_padding_right -}}px;
    padding-bottom: {{- block.settings.mobile_padding_bottom -}}px;
    padding-left: {{- block.settings.mobile_padding_left -}}px;
    color: rgba({{- block.settings.color.red -}}, {{- block.settings.color.green -}}, {{- block.settings.color.blue -}}, {{- block.settings.color.alpha -}});
    font-size: {{- block.settings.mobile_font_size -}}px;
    font-family: "{{- block.settings.font.family -}}", {{- block.settings.font.fallback_families }};
    font-style: {{- block.settings.font.style -}};
    font-weight: {{- block.settings.font.weight -}};
    letter-spacing: {{- block.settings.mobile_letter_spacing -}}px;
    line-height: {{- block.settings.mobile_line_height -}}px;
  }

  @media screen and (min-width: 750px) {
    section.custom-richtext-title__container-{{ block.id }} {
      {%- if block.settings.display_on_desktop == false -%}
        display: none;
      {%- else -%}
        display: block;
      {%- endif -%}

      margin-top: {{- block.settings.desktop_margin_top -}}px;
      margin-right: {{- block.settings.desktop_margin_right -}}px;
      margin-bottom: {{- block.settings.desktop_margin_bottom -}}px;
      margin-left: {{- block.settings.desktop_margin_left -}}px;
      padding-top: {{- block.settings.desktop_padding_top -}}px;
      padding-right: {{- block.settings.desktop_padding_right -}}px;
      padding-bottom: {{- block.settings.desktop_padding_bottom -}}px;
      padding-left: {{- block.settings.desktop_padding_left -}}px;
      font-size: {{- block.settings.desktop_font_size -}}px;
      letter-spacing: {{- block.settings.desktop_letter_spacing -}}px;
      line-height: {{- block.settings.desktop_line_height -}}px;
    }

    section.custom-richtext-title__container-{{ block.id }} > p {
      text-align: {{ block.settings.desktop_text_alignment }};
    }

    {%- if block.settings.enable_hover_effect -%}
      section.custom-richtext-title__container-{{ block.id }}:hover {
        color: rgba({{- block.settings.hover_color.red -}}, {{- block.settings.hover_color.green -}}, {{- block.settings.hover_color.blue -}}, {{- block.settings.hover_color.alpha -}});
      }
    {%- endif -%}
  }
</style>

